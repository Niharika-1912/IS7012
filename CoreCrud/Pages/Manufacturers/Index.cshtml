@page
@model CoreCrud.Pages.Manufacturers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<body background= "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRcho8DzI5WSuYx2fwcx4Clh8pDBVX7mk1P3CW5-Oi22EkXwAA91A">

        <h1>Manufacturers</h1>

        <p>
            <a asp-page="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Manufacturer[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Manufacturer[0].CountryofOrigin)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Manufacturer[0].CountryCode)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Manufacturer)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CountryofOrigin)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CountryCode)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                        </td>


                    </tr>
                }
            </tbody>
        </table>
    </body>