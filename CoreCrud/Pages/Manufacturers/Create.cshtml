@page
@model CoreCrud.Pages.Manufacturers.CreateModel

@{
    ViewData["Title"] = "Create";
}
    <body background="https://s3.amazonaws.com/Syntaxxx/background-gold-bokeh.jpg">
        <h1>Create</h1>

        <h4>Manufacturer</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Manufacturer.Name" class="control-label"></label>
                        <input asp-for="Manufacturer.Name" class="form-control" />
                        <span asp-validation-for="Manufacturer.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Manufacturer.CountryofOrigin" class="control-label"></label>
                        <input asp-for="Manufacturer.CountryofOrigin" class="form-control" />
                        <span asp-validation-for="Manufacturer.CountryofOrigin" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Manufacturer.CountryCode" class="control-label"></label>
                        <input asp-for="Manufacturer.CountryCode" class="form-control" />
                        <span asp-validation-for="Manufacturer.CountryCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="Index">Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </body>