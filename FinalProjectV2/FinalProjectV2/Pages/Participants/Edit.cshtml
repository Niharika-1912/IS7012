@page
@model FinalProjectV2.Pages.Participants.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Participant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Participant.ID" />
            <div class="form-group">
                <label asp-for="Participant.UserName" class="control-label"></label>
                <input asp-for="Participant.UserName" class="form-control" />
                <span asp-validation-for="Participant.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participant.Gender" class="control-label"></label>
                <input asp-for="Participant.Gender" class="form-control" />
                <span asp-validation-for="Participant.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participant.Email" class="control-label"></label>
                <input asp-for="Participant.Email" class="form-control" />
                <span asp-validation-for="Participant.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participant.NickName" class="control-label"></label>
                <input asp-for="Participant.NickName" class="form-control" />
                <span asp-validation-for="Participant.NickName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participant.MatchId" class="control-label"></label>
                <select asp-for="Participant.MatchId" class="form-control" asp-items="ViewBag.MatchId"></select>
                <span asp-validation-for="Participant.MatchId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
