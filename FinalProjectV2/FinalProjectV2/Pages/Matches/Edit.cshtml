@page
@model FinalProjectV2.Pages.Matches.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Match.ID" />
            <div class="form-group">
                <label asp-for="Match.MatchName" class="control-label"></label>
                <input asp-for="Match.MatchName" class="form-control" />
                <span asp-validation-for="Match.MatchName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Match.TournamentName" class="control-label"></label>
                <input asp-for="Match.TournamentName" class="form-control" />
                <span asp-validation-for="Match.TournamentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Match.Location" class="control-label"></label>
                <input asp-for="Match.Location" class="form-control" />
                <span asp-validation-for="Match.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Match.TournamentId" class="control-label"></label>
                <select asp-for="Match.TournamentId" class="form-control" asp-items="ViewBag.TournamentId"></select>
                <span asp-validation-for="Match.TournamentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
