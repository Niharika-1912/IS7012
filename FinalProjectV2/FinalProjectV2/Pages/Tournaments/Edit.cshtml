@page
@model FinalProjectV2.Pages.Tournaments.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Tournament</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tournament.ID" />
            <div class="form-group">
                <label asp-for="Tournament.TournamentName" class="control-label"></label>
                <input asp-for="Tournament.TournamentName" class="form-control" />
                <span asp-validation-for="Tournament.TournamentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tournament.TournamentStartDate" class="control-label"></label>
                <input asp-for="Tournament.TournamentStartDate" class="form-control" />
                <span asp-validation-for="Tournament.TournamentStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tournament.TournamentEndDate" class="control-label"></label>
                <input asp-for="Tournament.TournamentEndDate" class="form-control" />
                <span asp-validation-for="Tournament.TournamentEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tournament.Location" class="control-label"></label>
                <input asp-for="Tournament.Location" class="form-control" />
                <span asp-validation-for="Tournament.Location" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Tournament.IsActive" /> @Html.DisplayNameFor(model => model.Tournament.IsActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Tournament.AdminId" class="control-label"></label>
                <select asp-for="Tournament.AdminId" class="form-control" asp-items="ViewBag.AdminId"></select>
                <span asp-validation-for="Tournament.AdminId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
